<% provide(:title, "Forms") %>

<%= form_for :ch0719exampleform, url: ch0719exampleforms_path do |f| %>

  <fieldset>
      <legend>Your Details:</legend>
      <%= f.label :name %>: 
      <%= f.text_field :name, size: 30, maxlength: 100 %><br />
      <%= f.label :email %>: 
      <%= f.text_field :email, size: 30, maxlength: 100 %><br />      
  </fieldset><br />

  <fieldset>
    <legend>Your Review:</legend>
      <p>
        <%= f.label :hear_about, "How did you hear about us?" %>
        <%= f.select :referrer, options_for_select(["Google","Friend","Advert","Other"]), {}, class: "form-control" %>          
      </p>
      <p>
          Would you visit again?<br />
          <%= f.radio_button(:rating, "yes") %> 
          <%= label_tag(:rating, "Yes") %>    
          <%= f.radio_button(:rating, "no") %>
          <%= label_tag(:rating, "No") %>
          <%= f.radio_button(:rating, "maybe") %>
          <%= label_tag(:rating, "Maybe") %><br />                    
      </p>
      <p>
          <%= f.label :comment, "Comments:" %><br />
          <%= f.text_area :comment, rows: 4, cols: 40 %>          
      </p>
      <%= f.check_box(:subscribe, checked: true) %>
      <%= label_tag(:subscribe, "Sign me up for email updates") %><br />
      <%= f.submit "Submit review" %>
  </fieldset>
<% end %>